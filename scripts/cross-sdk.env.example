# Copy this file to scripts/cross-sdk.env (or another location) and fill in the values

# Core service endpoints
STRATIUM_KEY_ACCESS_URL=http://localhost:50053
STRATIUM_KEY_MANAGER_URL=http://localhost:50052
STRATIUM_KEYCLOAK_URL=http://localhost:8080
STRATIUM_KEYCLOAK_REALM=stratium

# Pre-fetched bearer token (required for integration tests)
STRATIUM_BEARER_TOKEN=replace-with-real-user-token

# Optional OAuth client credentials (only used if you omit STRATIUM_BEARER_TOKEN)
# STRATIUM_CLIENT_ID=stratium-sdk-demo
# STRATIUM_CLIENT_SECRET=replace-me
# STRATIUM_USERNAME=user
# STRATIUM_PASSWORD=password123

# Optional subject override (useful when relying on client credentials tokens without a `sub` claim)
# STRATIUM_SUBJECT_ID=service-account-id

# Policy to embed in every ZTDF (base64-encoded JSON)
STRATIUM_POLICY_BASE64=replace-with-policy-base64

# Resource attributes asserted during wrap/unwrap (key=value pairs, comma separated)
STRATIUM_RESOURCE_ATTRIBUTES=classification=confidential,http://example.com/attr/classification/value/confidential=true

# Optional overrides
# STRATIUM_RESOURCE=my-resource
# STRATIUM_FILENAME=interop.txt
# STRATIUM_CONTENT_TYPE=text/plain
# STRATIUM_GO_KEY_DIR=/absolute/path/to/go/client/keys
# STRATIUM_JS_KEY_DIR=/absolute/path/to/js/client/keys
# STRATIUM_JAVA_KEY_DIR=/absolute/path/to/java/client/keys
